        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
      }

      .card {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(15px);
        max-width: 400px;
        width: 90%;
        text-align: center;
        animation: fadeIn 1s ease-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .title {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 20px;
        color: #ffe082;
      }

      .icon {
        font-size: 64px;
        margin-bottom: 15px;
      }

